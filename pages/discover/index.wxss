.discover-page {
  min-height: 100vh;
  background: #f6f8fa;
  padding-bottom: 160rpx;
}

.scroll {
  height: calc(100vh - 120rpx);
}

.intro {
  margin: 32rpx;
  background: linear-gradient(135deg, #2f7bff, #579bff);
  border-radius: 24rpx;
  padding: 32rpx;
  color: #fff;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  box-shadow: 0 16rpx 48rpx rgba(15, 32, 67, 0.12);
}

.intro-title {
  font-size: 36rpx;
  font-weight: 600;
}

.intro-desc {
  font-size: 24rpx;
  opacity: 0.9;
  line-height: 1.6;
}

.category-tabs {
  display: flex;
  gap: 16rpx;
  margin: 24rpx 32rpx 0;
}

.tab {
  padding: 14rpx 32rpx;
  border-radius: 999rpx;
  background: #f2f3f5;
  color: #4e5969;
  font-size: 26rpx;
}

.tab.active {
  background: #1677ff;
  color: #fff;
  font-weight: 600;
}

.section {
  margin: 24rpx 32rpx 0;
  background: #fff;
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 16rpx 48rpx rgba(15, 32, 67, 0.08);
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2329;
}

.field {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.field-head {
  display: flex;
  align-items: baseline;
  justify-content: space-between;
}

.field-head text:first-child {
  font-size: 26rpx;
  font-weight: 500;
  color: #1f2329;
}

.hint {
  font-size: 22rpx;
  color: #86909c;
}

.chips {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.chip {
  padding: 12rpx 24rpx;
  border-radius: 999rpx;
  background: #f2f3f5;
  color: #4e5969;
  font-size: 24rpx;
}

.chip.active {
  background: #1677ff;
  color: #fff;
  font-weight: 600;
}

.custom-input {
  width: 200rpx;
  background: #f7f8fa;
  border-radius: 16rpx;
  padding: 16rpx 20rpx;
  font-size: 24rpx;
  color: #1f2329;
}

.custom-range {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.divider {
  font-size: 24rpx;
  color: #4e5969;
}

.actions {
  display: flex;
  gap: 16rpx;
  margin: 32rpx;
}

.ghost {
  flex: 1;
  padding: 20rpx 0;
  border-radius: 16rpx;
  border: 1px solid #1677ff;
  color: #1677ff;
  background: #fff;
  font-size: 26rpx;
}

.results {
  margin: 0 32rpx 80rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.result-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 28rpx;
  box-shadow: 0 12rpx 36rpx rgba(15, 32, 67, 0.08);
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.result-head {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.result-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2329;
}

.badge {
  font-size: 22rpx;
  color: #22a06b;
}

.result-meta {
  font-size: 24rpx;
  color: #4e5969;
  display: flex;
  gap: 8rpx;
  flex-wrap: wrap;
}

.result-meta text {
  color: #4e5969;
}

.result-desc {
  font-size: 24rpx;
  color: #4e5969;
  line-height: 1.6;
}

.result-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag {
  padding: 6rpx 18rpx;
  border-radius: 999rpx;
  background: rgba(22, 119, 255, 0.12);
  color: #1677ff;
  font-size: 22rpx;
}

.empty {
  text-align: center;
  font-size: 24rpx;
  color: #86909c;
  padding: 80rpx 0;
}
