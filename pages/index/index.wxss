.home-page {
  min-height: 100vh;
  padding-bottom: 160rpx;
}

.scroll {
  height: calc(100vh - 120rpx);
}

.banner {
  padding: 32rpx 32rpx 16rpx;
}

.swiper {
  height: 220rpx;
  border-radius: 20rpx;
  overflow: hidden;
}

.banner-card {
  height: 220rpx;
  background: linear-gradient(135deg, #1677ff, #5aa3ff);
  color: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  gap: 12rpx;
}

.banner-tag {
  font-size: 22rpx;
  background: rgba(255, 255, 255, 0.25);
  padding: 4rpx 16rpx;
  border-radius: 999rpx;
  display: inline-flex;
  align-self: flex-start;
}

.banner-title {
  font-size: 36rpx;
  font-weight: 600;
}

.banner-desc {
  font-size: 24rpx;
  line-height: 1.5;
}

.notice {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #4e5969;
}

.segment {
  margin: 16rpx 32rpx 0;
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 16rpx;
  box-shadow: 0 12rpx 32rpx rgba(15, 32, 67, 0.08);
}

.segment-item {
  text-align: center;
  font-size: 26rpx;
  padding: 18rpx 0;
  border-radius: 16rpx;
  color: #4e5969;
}

.segment-item.active {
  background: linear-gradient(135deg, #2f7bff, #1677ff);
  color: #fff;
  font-weight: 600;
}

.filters {
  margin: 24rpx 32rpx 0;
  background: #fff;
  border-radius: 24rpx;
  padding: 24rpx 24rpx 16rpx;
  box-shadow: 0 12rpx 32rpx rgba(15, 32, 67, 0.05);
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.filter-group {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.filter-label {
  font-size: 26rpx;
  font-weight: 500;
  color: #1f2329;
}

.filter-options {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.chip {
  background: #f2f3f5;
  padding: 10rpx 20rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
  color: #4e5969;
}

.chip.ghost {
  background: rgba(22, 119, 255, 0.12);
  color: #1677ff;
}

.chip.active {
  background: #1677ff;
  color: #fff;
}

.filter-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #86909c;
  padding-top: 8rpx;
  border-top: 1px solid #f2f3f5;
}

.reset {
  color: #1677ff;
}

.list {
  margin: 24rpx 32rpx 60rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.card {
  background: #fff;
  border-radius: 24rpx;
  padding: 28rpx;
  box-shadow: 0 16rpx 48rpx rgba(15, 32, 67, 0.08);
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.card-head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 12rpx;
}

.title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2329;
}

.meta {
  font-size: 24rpx;
  color: #4e5969;
}

.metrics {
  display: grid;
  grid-template-columns: repeat(3, minmax(0, 1fr));
  gap: 16rpx;
}

.metric {
  background: #f7f8fa;
  border-radius: 16rpx;
  padding: 16rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.metric-label {
  font-size: 22rpx;
  color: #86909c;
}

.metric-value {
  font-size: 26rpx;
  font-weight: 600;
  color: #1f2329;
}

.skills {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #4e5969;
}

.publisher {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.publisher-name {
  font-weight: 600;
  color: #1f2329;
}

.publisher-credit {
  font-size: 22rpx;
  color: #86909c;
}

.stats {
  color: #1677ff;
}

.badge.neutral {
  background: rgba(22, 119, 255, 0.1);
  color: #1677ff;
}

.forum-stats {
  display: flex;
  justify-content: space-between;
  color: #4e5969;
  font-size: 24rpx;
}

.achievement {
  display: flex;
  gap: 20rpx;
}

.cover {
  width: 160rpx;
  height: 160rpx;
  border-radius: 16rpx;
  background: #f2f3f5;
}

.achievement-body {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  flex: 1;
}

.achievement-footer {
  display: flex;
  justify-content: space-between;
  color: #4e5969;
  font-size: 24rpx;
}

.empty {
  text-align: center;
  color: #86909c;
  font-size: 24rpx;
  padding: 80rpx 0;
}
