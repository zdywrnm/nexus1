page {
  background-color: #f5f6f7;
}

.page {
  min-height: 100vh;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.search-bar {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.search-input {
  flex: 1;
  height: 72rpx;
  padding: 0 24rpx;
  background: #fff;
  border-radius: 36rpx;
  border: 1rpx solid #e5e6eb;
  font-size: 28rpx;
}

.search-btn {
  width: 150rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  background: #1677ff;
  color: #fff;
  border-radius: 36rpx;
  font-size: 28rpx;
}

.list {
  flex: 1;
  min-height: 0;
  padding-bottom: 160rpx;
  box-sizing: border-box;
}

.card {
  background: #fff;
  border-radius: 24rpx;
  padding: 28rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 12rpx 24rpx rgba(22, 119, 255, 0.08);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1d2129;
}

.badge {
  padding: 4rpx 16rpx;
  background: rgba(22, 119, 255, 0.1);
  color: #1677ff;
  border-radius: 999rpx;
  font-size: 24rpx;
}

.bounty {
  font-size: 36rpx;
  color: #1677ff;
  font-weight: 600;
}

.company {
  margin: 8rpx 0 16rpx;
  color: #4e5969;
  font-size: 26rpx;
}

.skills {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.chip {
  padding: 6rpx 20rpx;
  background: #f2f3f5;
  border-radius: 999rpx;
  color: #4e5969;
  font-size: 24rpx;
}

.empty {
  text-align: center;
  color: #86909c;
  padding: 80rpx 0;
  font-size: 28rpx;
}
