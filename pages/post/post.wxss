.create-page {
  min-height: 100vh;
  background: #f6f8fa;
}

.scroll {
  height: calc(100vh - 120rpx);
}

.hero {
  padding: 48rpx 32rpx 24rpx;
  background: linear-gradient(135deg, #1d5bff, #63a0ff);
  color: #fff;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.hero-title {
  font-size: 40rpx;
  font-weight: 600;
}

.hero-desc {
  font-size: 24rpx;
  opacity: 0.9;
}

.quick-grid {
  display: grid;
  grid-template-columns: repeat(3, minmax(0, 1fr));
  gap: 16rpx;
}

.quick-item {
  background: rgba(255, 255, 255, 0.16);
  border-radius: 20rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.quick-item.active {
  background: rgba(255, 255, 255, 0.28);
}

.quick-title {
  font-size: 28rpx;
  font-weight: 600;
}

.quick-desc {
  font-size: 22rpx;
}

.tabs {
  display: flex;
  gap: 16rpx;
  margin: 24rpx 32rpx 0;
}

.tab {
  padding: 14rpx 24rpx;
  border-radius: 999rpx;
  background: #f2f3f5;
  color: #4e5969;
  font-size: 26rpx;
}

.tab.active {
  background: #1677ff;
  color: #fff;
  font-weight: 600;
}

.ai-tip {
  margin: 24rpx 32rpx 0;
  background: #fff;
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 12rpx 36rpx rgba(15, 32, 67, 0.08);
}

.ai-head {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.ai-body {
  font-size: 24rpx;
  color: #4e5969;
  line-height: 1.7;
}

.form {
  margin: 24rpx 32rpx 0;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.section {
  background: #fff;
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 16rpx 48rpx rgba(15, 32, 67, 0.08);
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2329;
}

.group {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.label {
  font-size: 26rpx;
  color: #1f2329;
  font-weight: 500;
}

.required {
  color: #ff4d4f;
  margin-left: 8rpx;
}

.input,
.textarea {
  background: #f7f8fa;
  border-radius: 16rpx;
  padding: 20rpx;
  font-size: 26rpx;
  color: #1f2329;
}

.textarea {
  min-height: 180rpx;
}

.chips {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.chip {
  padding: 12rpx 24rpx;
  border-radius: 999rpx;
  background: #f2f3f5;
  color: #4e5969;
  font-size: 24rpx;
}

.chip.active {
  background: #1677ff;
  color: #fff;
  font-weight: 600;
}

.custom-range {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.divider {
  color: #4e5969;
  font-size: 26rpx;
}

.submit {
  margin: 32rpx;
  background: linear-gradient(135deg, #2f7bff, #1677ff);
  color: #fff;
  font-size: 30rpx;
  border-radius: 999rpx;
  padding: 24rpx 0;
  font-weight: 600;
  box-shadow: 0 20rpx 40rpx rgba(22, 119, 255, 0.25);
}
