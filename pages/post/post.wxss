page {
  background: #f5f6f7;
}

.page {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 24rpx;
  box-sizing: border-box;
  gap: 24rpx;
}

.body {
  flex: 1;
  min-height: 0;
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-sizing: border-box;
  box-shadow: 0 12rpx 30rpx rgba(15, 21, 32, 0.06);
  padding-bottom: 200rpx;
}

.tip {
  font-size: 24rpx;
  color: #a0a8b3;
  margin-bottom: 12rpx;
}

.group {
  margin-bottom: 32rpx;
}

.label {
  font-size: 26rpx;
  color: #1d2129;
  font-weight: 500;
  margin-bottom: 12rpx;
}

.required {
  color: #ff4d4f;
  margin-left: 6rpx;
}

.input,
.textarea {
  width: 100%;
  border: 1rpx solid #e5e6eb;
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background: #fdfdff;
}

.textarea {
  min-height: 180rpx;
  line-height: 1.6;
}

.picker {
  height: 88rpx;
  border: 1rpx solid #e5e6eb;
  border-radius: 16rpx;
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #4e5969;
  font-size: 28rpx;
  background: #fdfdff;
}

.arrow {
  font-size: 32rpx;
  color: #c0c6d4;
}

.switch-group {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.count {
  text-align: right;
  font-size: 24rpx;
  color: #a0a8b3;
  margin-top: 8rpx;
}

.submit {
  height: 96rpx;
  line-height: 96rpx;
  border-radius: 999rpx;
  background: #1677ff;
  color: #fff;
  font-size: 32rpx;
  box-shadow: 0 16rpx 32rpx rgba(22, 119, 255, 0.3);
}

.submit::after {
  display: none;
}
