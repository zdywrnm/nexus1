.detail-page {
  min-height: 100vh;
  padding-bottom: 160rpx;
  background: #f6f8fa;
}

.scroll {
  height: calc(100vh - 140rpx);
}

.risk-banner {
  margin: 24rpx 32rpx 0;
  border-radius: 20rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  color: #1f2329;
}

.risk-banner.warning {
  background: rgba(255, 143, 31, 0.15);
  border: 1px solid rgba(255, 143, 31, 0.45);
}

.risk-banner.danger {
  background: rgba(255, 77, 79, 0.15);
  border: 1px solid rgba(255, 77, 79, 0.45);
}

.risk-level {
  font-size: 26rpx;
  font-weight: 600;
}

.risk-message {
  font-size: 24rpx;
}

.risk-link {
  font-size: 22rpx;
  color: #1677ff;
}

.hero {
  margin: 24rpx 32rpx 0;
  background: linear-gradient(135deg, #2f7bff, #65a7ff);
  border-radius: 24rpx;
  padding: 32rpx;
  color: #fff;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.type-badge {
  align-self: flex-start;
  padding: 8rpx 20rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.25);
  font-size: 24rpx;
}

.hero-title {
  font-size: 38rpx;
  font-weight: 600;
}

.hero-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.hero .tag {
  background: rgba(255, 255, 255, 0.2);
  padding: 6rpx 18rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
}

.hero-summary {
  font-size: 24rpx;
  line-height: 1.6;
  opacity: 0.95;
}

.stats {
  margin: 24rpx 32rpx 0;
  display: grid;
  grid-template-columns: repeat(3, minmax(0, 1fr));
  gap: 16rpx;
}

.stat {
  background: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 12rpx 36rpx rgba(15, 32, 67, 0.08);
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #4e5969;
}

.stat-value {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2329;
}

.section {
  margin: 24rpx 32rpx 0;
  background: #fff;
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 12rpx 36rpx rgba(15, 32, 67, 0.08);
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.section-head {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2329;
}

.section-sub {
  font-size: 22rpx;
  color: #86909c;
}

.milestones {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.milestone {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #f7f8fa;
  border-radius: 18rpx;
  padding: 16rpx 20rpx;
}

.milestone-main {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.milestone-name {
  font-size: 26rpx;
  font-weight: 600;
  color: #1f2329;
}

.milestone-detail {
  font-size: 24rpx;
  color: #4e5969;
}

.milestone-status {
  padding: 6rpx 20rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
}

.milestone-status.done {
  background: rgba(82, 196, 26, 0.12);
  color: #389e0d;
}

.milestone-status.processing {
  background: rgba(22, 119, 255, 0.12);
  color: #1677ff;
}

.milestone-status.pending {
  background: rgba(134, 144, 156, 0.15);
  color: #4e5969;
}

.bullet-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.bullet {
  display: flex;
  gap: 12rpx;
  align-items: flex-start;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 6rpx;
  background: #1677ff;
  margin-top: 14rpx;
}

.bullet-text {
  font-size: 24rpx;
  color: #1f2329;
  line-height: 1.6;
}

.body-text {
  font-size: 24rpx;
  color: #1f2329;
  line-height: 1.7;
}

.pill-group {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.pill {
  padding: 8rpx 20rpx;
  border-radius: 999rpx;
  background: rgba(22, 119, 255, 0.12);
  color: #1677ff;
  font-size: 24rpx;
}

.publisher-card {
  background: #f7f8fa;
  border-radius: 18rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.publisher-name {
  font-size: 28rpx;
  font-weight: 600;
}

.publisher-meta {
  font-size: 24rpx;
  color: #4e5969;
}

.publisher-risk {
  font-size: 22rpx;
  color: #ff8f1f;
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.history-item {
  background: #f7f8fa;
  border-radius: 18rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.history-top {
  display: flex;
  justify-content: space-between;
}

.history-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #1f2329;
}

.history-time {
  font-size: 22rpx;
  color: #86909c;
}

.history-content {
  font-size: 24rpx;
  color: #4e5969;
  line-height: 1.6;
}

.actions {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 16rpx 32rpx calc(env(safe-area-inset-bottom) + 16rpx);
  background: rgba(255, 255, 255, 0.95);
  display: flex;
  gap: 16rpx;
  box-shadow: 0 -12rpx 24rpx rgba(15, 32, 67, 0.1);
}

.actions button {
  flex: 1;
  border-radius: 999rpx;
  font-size: 28rpx;
}

.secondary {
  background: #f0f5ff;
  color: #1677ff;
}

.primary {
  background: linear-gradient(135deg, #2f7bff, #1677ff);
  color: #fff;
  font-weight: 600;
}

.empty {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #86909c;
  font-size: 24rpx;
}
