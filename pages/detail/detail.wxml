<view class="detail-page" wx:if="{{item}}">
  <scroll-view scroll-y class="scroll" enable-back-to-top="true">
    <view class="risk-banner {{riskBanner.type}}" wx:if="{{riskBanner}}">
      <view class="risk-level">{{riskBanner.level}}</view>
      <view class="risk-message">{{riskBanner.message}}</view>
      <view class="risk-link">查看认证详情 ></view>
    </view>

    <view class="hero">
      <view class="type-badge">{{typeLabel}}</view>
      <view class="hero-title">{{item.title}}</view>
      <view class="hero-tags" wx:if="{{infoTags.length}}">
        <text class="tag" wx:for="{{infoTags}}" wx:for-item="tag" wx:key="*this">{{tag}}</text>
      </view>
      <view class="hero-summary" wx:if="{{contentSummary}}">{{contentSummary}}</view>
    </view>

    <view class="stats" wx:if="{{stats.length}}">
      <view class="stat" wx:for="{{stats}}" wx:for-item="stat" wx:key="label">
        <view class="stat-label">{{stat.label}}</view>
        <view class="stat-value">{{stat.value}}</view>
      </view>
    </view>

    <view class="section" wx:if="{{showMilestones && milestones.length}}">
      <view class="section-head">
        <text class="section-title">里程碑与进度</text>
        <text class="section-sub">命中异常时将自动触发提醒</text>
      </view>
      <view class="milestones">
        <view class="milestone" wx:for="{{milestones}}" wx:for-item="mile" wx:key="name">
          <view class="milestone-main">
            <text class="milestone-name">{{mile.name}}</text>
            <text class="milestone-detail">{{mile.detail}}</text>
          </view>
          <text class="milestone-status {{mile.status}}">{{statusMap[mile.status]}}</text>
        </view>
      </view>
    </view>

    <view class="section" wx:if="{{showDeliverables && deliverables.length}}">
      <view class="section-head">
        <text class="section-title">交付清单 / 岗位职责</text>
      </view>
      <view class="bullet-list">
        <view class="bullet" wx:for="{{deliverables}}" wx:for-item="item" wx:key="*this">
          <view class="dot"></view>
          <text class="bullet-text">{{item}}</text>
        </view>
      </view>
    </view>

    <view class="section" wx:if="{{showAcceptance && acceptance.length}}">
      <view class="section-head">
        <text class="section-title">验收标准 / 任职要求</text>
      </view>
      <view class="bullet-list">
        <view class="bullet" wx:for="{{acceptance}}" wx:for-item="item" wx:key="*this">
          <view class="dot"></view>
          <text class="bullet-text">{{item}}</text>
        </view>
      </view>
    </view>

    <view class="section" wx:if="{{type === 'forum'}}">
      <view class="section-head">
        <text class="section-title">帖子内容</text>
      </view>
      <text class="body-text">{{forumContent}}</text>
    </view>

    <view class="section" wx:if="{{type === 'result'}}">
      <view class="section-head">
        <text class="section-title">成果亮点</text>
      </view>
      <text class="body-text">{{resultSummary}}</text>
    </view>

    <view class="section" wx:if="{{showSafeguards && safeguards.length}}">
      <view class="section-head">
        <text class="section-title">保障与规则</text>
      </view>
      <view class="pill-group">
        <text class="pill" wx:for="{{safeguards}}" wx:for-item="item" wx:key="*this">{{item}}</text>
      </view>
    </view>

    <view class="section">
      <view class="section-head">
        <text class="section-title">发布者与风控</text>
      </view>
      <view class="publisher-card">
        <view class="publisher-name">{{publisher.name}}</view>
        <view class="publisher-meta">信用 {{publisher.credit}} · {{publisher.certification}}</view>
        <view class="publisher-meta">{{publisher.contact}}</view>
        <view class="publisher-risk">{{publisher.risk}}</view>
      </view>
    </view>

    <view class="section">
      <view class="section-head">
        <text class="section-title">历史评价</text>
      </view>
      <view class="history-list">
        <view class="history-item" wx:for="{{history}}" wx:for-item="record" wx:key="title">
          <view class="history-top">
            <text class="history-title">{{record.title}}</text>
            <text class="history-time">{{record.time}}</text>
          </view>
          <text class="history-content">{{record.content}}</text>
        </view>
      </view>
    </view>
  </scroll-view>

  <view class="actions">
    <button class="secondary" bindtap="onSecondaryAction">{{secondaryCta}}</button>
    <button class="primary" bindtap="onPrimaryAction">{{primaryCta}}</button>
  </view>
</view>

<view class="empty" wx:else>
  <text>暂无数据，请返回首页选择内容。</text>
</view>
