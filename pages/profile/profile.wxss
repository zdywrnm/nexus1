page {
  background: #f5f6f7;
}

.page {
  min-height: 100vh;
  padding: 24rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 12rpx 30rpx rgba(15, 21, 32, 0.06);
}

.hero-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #1d2129;
}

.hero-sub {
  margin-top: 12rpx;
  font-size: 26rpx;
  color: #4e5969;
}

.section-header {
  font-size: 30rpx;
  font-weight: 600;
  color: #1d2129;
  margin-bottom: 20rpx;
}

.skills {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.chip {
  padding: 10rpx 26rpx;
  border-radius: 999rpx;
  background: #f2f3f5;
  color: #4e5969;
  font-size: 24rpx;
}

.resume + .resume {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.resume-title {
  font-size: 28rpx;
  color: #1d2129;
}

.resume-score {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #86909c;
}
