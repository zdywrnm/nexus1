.profile-page {
  min-height: 100vh;
  padding-bottom: 160rpx;
}

.scroll {
  height: calc(100vh - 120rpx);
}

.hero {
  background: linear-gradient(135deg, #2f7bff, #6aa8ff);
  color: #fff;
  padding: 48rpx 32rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.hero-name {
  font-size: 40rpx;
  font-weight: 600;
}

.hero-sub {
  font-size: 26rpx;
  opacity: 0.85;
}

.hero-tags {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.tag {
  padding: 6rpx 18rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.2);
  font-size: 22rpx;
}

.hero-badges {
  display: flex;
  gap: 16rpx;
}

.badge {
  padding: 10rpx 24rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.25);
  color: #fff;
  font-size: 24rpx;
}

.section {
  margin: 24rpx 32rpx 0;
}

.card {
  background: #fff;
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 16rpx 48rpx rgba(15, 32, 67, 0.08);
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.section-head {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2329;
}

.section-action {
  font-size: 24rpx;
  color: #1677ff;
}

.identity-grid {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 16rpx;
}

.identity-item {
  background: #f7f8fa;
  border-radius: 18rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.identity-title {
  font-size: 26rpx;
  font-weight: 600;
}

.identity-status {
  font-size: 22rpx;
  padding: 4rpx 16rpx;
  border-radius: 999rpx;
  align-self: flex-start;
}

.identity-status.success {
  background: rgba(82, 196, 26, 0.12);
  color: #389e0d;
}

.identity-status.pending {
  background: rgba(22, 119, 255, 0.12);
  color: #1677ff;
}

.identity-status.alert {
  background: rgba(255, 143, 31, 0.12);
  color: #ff8f1f;
}

.identity-desc {
  font-size: 24rpx;
  color: #4e5969;
}

.resume-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.resume-item {
  background: #f7f8fa;
  border-radius: 18rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.resume-main {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.resume-title {
  font-size: 26rpx;
  font-weight: 600;
}

.resume-score {
  color: #1677ff;
  font-size: 24rpx;
}

.resume-meta {
  font-size: 24rpx;
  color: #4e5969;
}

.resume-tags {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.growth {
  display: grid;
  grid-template-columns: repeat(3, minmax(0, 1fr));
  gap: 16rpx;
}

.growth-item {
  background: #f7f8fa;
  border-radius: 18rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.growth-title {
  font-size: 24rpx;
  color: #4e5969;
}

.growth-value {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2329;
}

.growth-desc {
  font-size: 22rpx;
  color: #86909c;
}

.finance {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 16rpx;
}

.finance-item {
  background: #f7f8fa;
  border-radius: 18rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.finance-title {
  font-size: 26rpx;
  font-weight: 600;
}

.finance-value {
  font-size: 28rpx;
  color: #1677ff;
}

.finance-desc {
  font-size: 22rpx;
  color: #4e5969;
}

.settings {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #f7f8fa;
  border-radius: 18rpx;
  padding: 20rpx;
  font-size: 24rpx;
  color: #1f2329;
}

.setting-desc {
  color: #86909c;
  font-size: 22rpx;
}
